.login
    form(action="GET")
        .login__form
            .login__row
                .page-title.login__page-title Авторизуйтесь
            .login__row
                .login__icon-container
                    svg.login__icon(width='15' height='17')
                        use(xlink:href=`images/sprite/mySprite.min.svg#login`)
                input(type="login" placeholder='Логин').login__input
                .login__pop-up Вы не ввели логин
            .login__row 
                .login__icon-container             
                    svg.login__icon(width='18' height='17')
                        use(xlink:href=`images/sprite/mySprite.min.svg#password`)
                input(type="password" placeholder='Пароль').login__input
                .login__pop-up Вы не ввели пароль
            .login__row
                label.login_label 
                    input(type="checkbox" checked).login__input-checkbox
                    .login__checkbox-fake
                        svg(width='10' height='10').login__checkbox-fake-svg
                            use(xlink:href=`images/sprite/mySprite.min.svg#check`)
                    .login__text Я человек
            .login__row
                .login__text Вы точно не робот?
            .login__row
                label.login_label
                    input(type="radio" name ='i-you-sure' value='yes').login__input-radio
                    .login__radio-fake
                    .login__text Да 
                label.login_label
                    input(type="radio" name ='i-you-sure' value='no' checked).login__input-radio 
                    .login__radio-fake
                    .login__text Не уверен
